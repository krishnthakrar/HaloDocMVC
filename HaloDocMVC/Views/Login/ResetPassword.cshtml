@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Reset Password";
}
<div class="align-self-center min-vw-50 mt-4">
    <h3><strong>Reset Your Password</strong></h3>
    <form class="form">
        <input type="hidden" name="email" value="@TempData["email"]" />
        <div class="form-floating email">
            <input type="password" class="form-control shadow-none mb-4 col-xl-3 col-lg-4 col-md-6 col-sm-6" name="Password" id="pass" placeholder="Email">
            <label for="pass">Password</label>
        </div>
        <div class="form-floating email">
            <input type="password" class="form-control shadow-none mb-4 col-xl-3 col-lg-4 col-md-6 col-sm-6" name="ConfirmPassword" id="confpass" placeholder="Email">
            <label for="confpass">Confirm Password</label>
        </div>
        <input type="submit" class="btn btn-primary mb-5 form-control col-xl-3 col-lg-4 col-md-6 col-sm-6 col-xs-12" value="Reset">
    </form>
</div>