@{
    Layout = "_LoginLayout";
}
<div class="align-self-center min-vw-50 mt-4">
    <h3 class="py-3">Login To Your Account</h3>
    <strong class="text-danger">@ViewData["error"]</strong>
    <form asp-action="Validate" asp-controller="Login" method="post" class="mt-3">
        <div class="form-floating mb-4 email">
            <input type="email" class="form-control shadow-none" value="krishnthakrar10@gmail.com" name="Email" id="floatingInput" placeholder="name@example.com">
            <label class="bg-transparent" for="floatingInput">Email</label>
            <span class="text-danger"></span>
        </div>
        <div class="form-floating mb-4 password">
            <input type="password" class="form-control shadow-none eyehide" value="678" name="Passwordhash" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
            <span class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-info text-white w-100 mb-4" role="button">Login</button>
    </form>
    <a asp-controller="Home" asp-action="ResetPassword" class="text-decoration-none d-flex justify-content-center"><strong class="text-info">Forgot Password?</strong></a>
</div>