﻿@using Microsoft.EntityFrameworkCore.Metadata.Internal;
@model HaloDocMVC.Entity.Models.ViewDataUserProfile;
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="body">
    <div class="container">
        <div class="d-flex justify-content-between pageHead">
            <h4 class="pt-2">Submit Information</h4>
            <div class="backBtn">
                <a asp-controller="Dashboard" asp-action="Index"><button><span class="material-icons back"><span class="material-symbols-outlined">arrow_back_ios</span></span>Back</button></a>
            </div>
        </div>
            <form class="card border-0 shadow py-4 mb-5 mt-3 rounded p-3 rounded container" method="post">
            <h4 class="mb-4">General Information</h4>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="FirstName" type="text" class="form-control shadow-none" id="fName" placeholder="FirstName">
                    <label for="fName" class="form-label">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="LastName" type="text" class="form-control shadow-none" id="lName" placeholder="LastName">
                    <label for="lName" class="form-label">Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4 dateInput">
                    <input asp-for="DOB" type="date" class="form-control shadow-none" id="date">
                    <label for="date" class="form-label">Date of Birth</label>
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
            </div>
            <h4 class="mb-4">Contact Information</h4>
            <div class="row">
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-12 form-floating mb-4">
                    <select class="shadow-none form-select" id="dropDown">
                        <option selected>Phone</option>
                        <option value="1">Mobile</option>
                        <option value="2">Landline</option>
                    </select>
                    <label for="dropDown">Type</label>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 form-floating mb-4 phone">
                    <input type="tel" class="form-control shadow-none" id="phone">
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="Email" type="email" class="form-control shadow-none" id="email" placeholder="Email">
                    <label for="email" class="form-label">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
            </div>
            <h4 class="mb-4">Location Information</h4>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="Street" type="text" class="form-control shadow-none" id="street" placeholder="Street">
                    <label for="street" class="form-label">Street</label>
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="City" type="text" class="form-control shadow-none" id="city" placeholder="City">
                    <label for="city" class="form-label">City</label>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <select class="form-select" asp-for="State" data-allow-clear="true" tabindex="-1" id="regiondropdown" asp-items="@(new SelectList(ViewBag.AllRegion,"RegionId","RegionName"))" data-control="select2" data-placeholder="Select Level">
                        <option value="">Select State</option>
                    </select>
                    <label for="state" class="form-label">State</label>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="ZipCode" type="text" class="form-control shadow-none" id="zipCode" placeholder="ZipCode">
                    <label for="zipCode" class="form-label">Zip Code</label>
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row px-3 d-flex justify-content-end">
                <a id="editprofile" onclick="enable_disable()" class="col-1 btn btn-info text-white rounded p-2">Edit</a>
                <input type="submit" id="submit" class="col-1 btn bg-info text-white rounded p-2" value="save">
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("input").prop("readonly", true);
        $("select").prop("disabled", true);
        $("input").css("background-color", "#e9ecef");
        $("select").css("background-color", "#e9ecef");
        $("#submit").css("display", "none");
    });
</script>
<script>
    function enable_disable() {
        $("input").prop("readonly", false);
        $("select").prop("disabled", false);
        $("#submit").prop("readonly", false);
        $("#submit").css("display", "block");
        $("#editprofile").css("display", "none");
        $("input").css("background-color", "transparent");
        $("select").css("background-color", "transparent");
    }
</script>