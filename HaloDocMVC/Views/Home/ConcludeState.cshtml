@model List<HaloDocMVC.Entity.Models.AdminDashboardList>
@using static HaloDocMVC.Entity.Models.Constant

<div class="d-flex justify-content-between mt-4 mx-2 searchPatientRegion">
    <div>
        <strong class="d-flex align-items-center">
            <h5>
                Patients
            </h5>
            <span>
                (Conclude)
            </span>
        </strong>
    </div>
    <div class="linkButtons">
        <button type="button" class="btn btn-info mb-2 text-white"><i class="fa-regular fa-paper-plane px-1"></i><span class="adminIcon">Send Link</span></button>
        <button type="button" class="btn btn-info mb-2 text-white"><i class="fa-solid fa-file-pen px-1"></i><span class="adminIcon">Create Requests</span></button>
        <button type="button" class="btn btn-info mb-2 text-white"><i class="fa-solid fa-share px-1"></i><span class="adminIcon">Export</span></button>
        <button type="button" class="btn btn-info mb-2 text-white"><i class="fa-regular fa-share-from-square px-1"></i><span class="adminIcon">Export All</span></button>
        <button type="button" class="btn btn-info mb-2 text-white"><i class="fa-solid fa-user-nurse px-1"></i><span class="adminIcon">Request DIY Support</span></button>
    </div>
</div>
<div class="card border-1 rounded shadow mt-4">
    <div class="mt-2 mx-2">
        <div class="searchBar px-2">
            <div class="searchPatientRegion py-2">
                <div class="search m-1">
                    <i class="fa fa-search"></i>
                    <input type="text" class="form-control" placeholder="Search Patients">
                </div>
                <div class="search m-1">
                    <i class="fa fa-search"></i>
                    <select class="form-select shadow-none" id="floatingSelectGrid">
                        <option selected class="text-secondary">All Regions</option>
                        <option value="1">Ahmedabad</option>
                        <option value="2">Rajkot</option>
                        <option value="3">Surat</option>
                    </select>
                </div>
            </div>
            <div class="requestType">
                <div class="me-3">
                    <small>All</small>
                </div>
                <div class="me-3">
                    <i class="fa-solid fa-circle mx-1" style="color:#5fbc61;"></i>
                    <small>Patient</small>
                </div>
                <div class="me-3">
                    <i class="fa-solid fa-circle mx-1" style="color:#ed9124;"></i>
                    <small>Family / Friend</small>
                </div>
                <div class="me-3">
                    <i class="fa-solid fa-circle mx-1" style="color:#cd697b;"></i>
                    <small>Business</small>
                </div>
                <div class="me-2">
                    <i class="fa-solid fa-circle mx-1" style="color:#0a7cb9;"></i>
                    <small>Concierge</small>
                </div>
            </div>
        </div>
    </div>
    <div class="table-responsive m-2 mb-5 d-none d-sm-block">
        <table class="w-100">
            <thead class="theadbg py-2">
                <tr>
                    <th scope="col">Name</th>
                    <th></th>
                    <th scope="col">Date of Birth</th>
                    <th scope="col">Physician Name</th>
                    <th scope="col">Date of Service</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Chat With</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody class="mb-5">
                @foreach (var item in Model)
                {
                    <tr class="@Enum.GetName(typeof(ListType), item.RequestTypeId) border-bottom border-white text-white">
                        <td><small>@item.PatientName</small></td>
                        <td>
                            <button class="btn border-white text-white">
                                <i class="fa-regular fa-envelope"></i>
                            </button>
                        </td>
                        <td>
                            <small>@item.DateOfBirth.ToString("MMM d , yyyy")</small>
                        </td>
                        <td><small>Dr. J K Shani</small></td>
                        <td><small>@item.RequestedDate.ToString("MMM d , yyyy")</small></td>
                        <td>
                            <button class="btn border border-white text-white mt-2">
                                <i class="fa-solid fa-phone pe-2"></i>
                                <small>@item.PatientPhoneNumber</small>
                            </button>
                            <div>
                                <small>(Patient)</small>
                            </div>

                            @if (item.RequestTypeId != 2)
                            {
                                <button class="btn border border-white text-white mt-2">
                                    <i class="fa-solid fa-phone pe-2"></i>
                                    <small>@item.RequestorPhoneNumber</small>
                                </button>
                                <div>
                                    <small>
                                        (@Enum.GetName(typeof(ListType), item.RequestTypeId))
                                    </small>
                                </div>
                            }
                        </td>
                        <td><small>@item.Address</small></td>
                        <td>
                            <button class="btn border border-white text-white my-2">
                                <small>Patient</small>
                            </button>
                            <button class="btn border border-white text-white my-2">
                                <small>Provider</small>
                            </button>
                        </td>
                        <td>
                            <button class="btn border border-white text-white my-2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <small>Actions</small>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Home" asp-action="ViewCase" asp-route-RId="@item.RequestId" asp-route-RTId="@item.RequestTypeId" class="dropdown-item"><i class="fa-regular fa-rectangle-list"></i> View Case</a></li>
                                <li><a class="dropdown-item"><i class="fa-solid fa-upload"></i> View Uploads</a></li>
                                <li><a asp-controller="Home" asp-action="ViewNotes" asp-route-RId="@item.RequestId" class="dropdown-item"><i class="fa-regular fa-note-sticky"></i> View Notes</a></li>
                                <li><a class="dropdown-item"><i class="fa-solid fa-list-check"></i> Orders</a></li>
                                <li><a class="dropdown-item"><i class="fa-regular fa-rectangle-list"></i> Doctor's Note</a></li>
                                <li><a class="dropdown-item"><i class="fa-regular fa-rectangle-list"></i> Encounter</a></li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="accordion mt-3 d-block d-sm-none" id="accordionExample">
        @foreach (var item in Model)
        {
            <div class="accordion-item s7">
                <div class="accordion-header" id="flush-heading-@item.RequestId">
                    <div class="container-fluid" type="button" data-bs-toggle="collapse" data-bs-target="#flush-@item.RequestId" aria-expanded="true" aria-controls="collapse_@item.RequestId">
                        <div class="row w-100">
                            <div class="col-6 mb-3">
                                <small>@item.PatientName</small>
                            </div>
                            <div class="col-6 mb-3 text-end">
                                <small>(@Enum.GetName(typeof(ListType), item.RequestTypeId))</small>
                                <i class="fa-solid fa-circle txt-@Enum.GetName(typeof(ListType),item.RequestTypeId)"></i>
                            </div>
                            <div class="col-6">
                                @item.Address
                            </div>
                            <div class="col-6 text-end">
                                <button class="btn btn-sm btn-white border-info text-info rounded-pill 2px">
                                    <small>Map Location</small>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="flush-@item.RequestId" class="accordion-collapse collapse mb-3 border-bottom" data-bs-parent="#accordionExample">
                    <div class="accordion-body container-fluid">
                        <p><i class="btn btn-outline-info rounded-pill fa-solid fa-calendar-days me-2"></i>Date of Birth: @item.DateOfBirth.ToString("dd/MM/yyyy")</p>
                        <p><i class="btn btn-outline-info rounded-pill fa-solid fa-envelope me-2"></i>Email : @item.Email</p>
                        <p><i class="btn btn-outline-info rounded-pill fa-solid fa-phone me-2"></i>Patient : @item.PatientPhoneNumber</p>
                        <p><i class="btn btn-outline-info rounded-pill fa-solid fa-calendar-days me-2"></i>Date of service : @item.RequestedDate.ToString("dd/MM/yyyy")</p>
                        <p><i class="btn btn-outline-info rounded-pill fa-solid fa-user-doctor me-2"></i>Physician : Dr. J K Shani</p>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <a asp-controller="Home" asp-action="ViewNotes" asp-route-RId="@item.RequestId" class="btn btn-white bg-success text-white rounded-pill 2px w-100">
                                    <small>View Notes</small>
                                </a>
                            </div>
                            <div class="col-6 mb-3">
                                <button class="btn btn-white bg-success text-white rounded-pill 2px w-100">
                                    <small>Doctors Note</small>
                                </button>
                            </div>

                            <div class="col-6 mb-3">
                                <button class="btn btn-white bg-success text-white rounded-pill 2px w-100">
                                    <small>View Uploads</small>
                                </button>
                            </div>
                            <div class="col-6 mb-3">
                                <button class="btn btn-white bg-success text-white rounded-pill 2px w-100">
                                    <small>Encounter</small>
                                </button>
                            </div>
                            <div class="col-6 mb-3">
                                <button class="btn btn-white bg-warning text-white rounded-pill 2px w-100">
                                    <small>Orders</small>
                                </button>
                            </div>
                            <div class="col-6 mb-3 ">
                                <button class="btn btn-white bg-success text-white rounded-pill 2px w-100">
                                    <small>Email</small>
                                </button>
                            </div>
                        </div>
                        <div class="text-end d-md-flex justify-content-md-end">
                            <span>Chat With:</span>
                            <button class="btn btn-white border-info text-info me-md-2 mb-2" type="button">
                                <i class="fa-regular fa-user me-1"></i>
                                Patient
                            </button>
                            <button class="btn btn-white border-info text-info mb-2" type="button">
                                <i class="fa-solid fa-user-doctor me-1"></i>
                                Provider
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>