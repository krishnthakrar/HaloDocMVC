@model HaloDocMVC.Entity.Models.ViewDataCreatePatient
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Request";
}
<div class="body">
    <div class="container">
        <div class="d-flex justify-content-between mt-3">
            <div class="d-flex align-items-center">
                <h4 class="pt-2"><strong>Submit Information</strong></h4>
            </div>
            <div class="backBtn">
                <a asp-controller="Home" asp-action="Index"><button><span class="material-icons back"><span class="material-symbols-outlined">arrow_back_ios</span></span>Back</button></a>
            </div>
        </div>
        <form class="card border-0 shadow py-4 mb-5 mt-3 rounded p-3 rounded container" method="post" onsubmit="displayBusyIndicator()">
            <h4 class="mb-4">Patient</h4>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="FirstName" type="text" class="form-control shadow-none" id="fName" placeholder="FirstName">
                    <label for="fName" class="form-label">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="LastName" type="text" class="form-control shadow-none" id="lName" placeholder="LastName">
                    <label for="lName" class="form-label">Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4 phone">
                    <input asp-for="Mobile" class="form-control shadow-none" id="phone">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="Email" type="email" class="form-control shadow-none" id="email" placeholder="Email">
                    <label for="email" class="form-label">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4 dateInput">
                    <input asp-for="DOB" type="date" class="form-control shadow-none" id="date">
                    <label for="date" class="form-label">Date of Birth</label>
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
            </div>
            <h4 class="mb-4">Patient Location</h4>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="Street" type="text" class="form-control shadow-none" id="street" placeholder="Street">
                    <label for="street" class="form-label">Street</label>
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="City" type="text" class="form-control shadow-none" id="city" placeholder="City">
                    <label for="city" class="form-label">City</label>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="State" type="text" class="form-control shadow-none" id="state" placeholder="State">
                    <label for="state" class="form-label">State</label>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="ZipCode" type="text" class="form-control shadow-none" id="zipCode" placeholder="ZipCode">
                    <label for="zipCode" class="form-label">Zip Code</label>
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input type="text" class="form-control shadow-none" id="room" placeholder="Room">
                    <label for="room" class="form-label">Room# / Suite</label>
                </div>
                <div class="col-xl-1 col-lg-1 col-md-1 col-sm-12 col-12 form-floating mb-4">
                    <button class="btn btn-outline-info text text-info px-2 btnMap">Verify</button>
                </div>
                <div class="col-xl-1 col-lg-1 col-md-1 col-sm-12 col-12 form-floating mb-4">
                    <button class="btn btn-outline-info text text-info px-2 btnMap"><i class="fa fa-map-marker px-2" aria-hidden="true"></i>Map</button>
                </div>
            </div>
            <h4 class="mb-4">Notes</h4>
            <div class="form-floating">
                <textarea asp-for="Notes" class="form-control shadow-none mb-4" id="symptoms" rows="5" placeholder="Admin Notes"></textarea>
                <label for="symptoms" class="form-label">Admin Notes</label>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="row px-3 d-flex justify-content-end">
                <button type="submit" class="col-1 btn btn-info text-white rounded mx-2 p-2">Save</button>
                <a class="col-1 btn btn-outline-info text-info rounded mx-2 p-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
<partial name="../Shared/_Loader.cshtml" />
<script src="~/js/phone.js"></script>