@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Patient Landing Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/patient/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/darkLight.css">
    <title>Patient Landing Page</title>
</head>
<body>
    <div class="main">
        <button class="darkBtn" onclick="darkLight()"><img src="../../Images/moon.svg" id="moonImg" alt="Dark Light Button"></button>
        <div class="innerMain">
            <div class="header">
                <img src="../../Images/Fig56._Patient_site_1.png" alt="HalloDoc Logo">
            </div>
            <div class="body">
                <a asp-controller="PatientHome" asp-action="RequestLanding"><button type="submit" class="btn btn-primary mb-3 form-control col-xl-3 col-lg-4 col-md-6 col-sm-6 col-xs-12 subReq"><strong class="text-white">Submit A Request</strong></button></a>
                <a asp-controller="PatientLogin" asp-action="Index"><button type="submit" class="btn mb-3 form-control col-xl-3 col-lg-4 col-md-6 col-sm-6 col-xs-12 patient"><strong class="text-white">Registered Patients</strong></button></a>
            </div>
            <div class="footer">
                <a href="#"><small>Terms & Conditions</small></a> | <a href="#"><small>Privacy Policy</small></a>
            </div>
        </div>
    </div>
</body>
<script src="~/js/darklight.js"></script>
</html>