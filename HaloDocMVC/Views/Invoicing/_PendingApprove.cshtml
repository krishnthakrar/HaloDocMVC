﻿@{
    Layout = null;
}
@model List<HaloDocMVC.Entity.DataModels.TimeSheet>
@if (Model.Count != 0)
{
    <h3 class="mt-3">Pending Bi-Weekly Timesheet</h3>
    <table class="table my-4">
        <thead>
            <tr class="table-secondary">
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>Pending</td>
                    <td>
                        <a href="~/Invoicing/Timesheet?PhysicianId=@item.PhysicianId&StartDate=@item.StartDate.ToString()" class="btn mx-1 btn-sm btn-outline-info view-btn">
                            Approve
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}