@{
    string path = Context.Request.Path;
}
<nav class="navbar px-5 navbar-expand-lg shadow rounded d-none d-lg-block">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link px-3 text-dark currentpage @(path.StartsWith("/Home") ? "active" : "")" aria-current="page" asp-action="Index" asp-controller="Home">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link px-3 text-dark currentpage @(path.StartsWith("/AdminProfile") ? "active" : "")" aria-current="page" asp-action="Index" asp-controller="AdminProfile">My Profile</a>
                </li>
                <li class="nav-item">
                    
                    <a class="nav-link px-3 text-dark @(path.StartsWith("/ProviderLocation") ? "active" : "")" asp-action="Index" asp-controller="ProviderLocation">Provider Location</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown px-3 text-dark @(path.StartsWith("/Providers") || path.StartsWith("/Scheduling") ? "active" : "")" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Providers
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item @(path.StartsWith("/Providers") ? "active" : "")" asp-action="Index" asp-controller="Providers">Provider</a>
                        <a class="dropdown-item @(path.StartsWith("/Scheduling") ? "active" : "")" asp-action="Index" asp-controller="Scheduling">Scheduling</a>
                        <a class="dropdown-item" href="#"> Invoicing</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link px-3 text-dark currentpage @(path.StartsWith("/Partners") ? "active" : "")" aria-current="page" asp-action="Index" asp-controller="Partners">Partners</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown px-3 text-dark @(path.StartsWith("/Access") ? "active" : "")" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Access
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item @(path.EndsWith("/Access") ? "active" : "")" asp-action="Index" asp-controller="Access">Account Access</a>
                        <a class="dropdown-item @(path.StartsWith("/Access/UserAccess") ? "active" : "")" asp-action="UserAccess" asp-controller="Access">User Access</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown px-3 text-dark @(path.StartsWith("/Records") ? "active" : "")" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Records
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item @(path.EndsWith("/Records") ? "active" : "")" asp-action="Index" asp-controller="Records">Search Records</a>
                        <a class="dropdown-item @(path.StartsWith("/Records/EmailLogs") ? "active" : "")" asp-action="Index" asp-controller="Records">Email Logs</a>
                        <a class="dropdown-item @(path.StartsWith("/Records/SMSLogs") ? "active" : "")" asp-action="Index" asp-controller="Records">SMS Logs</a>
                        <a class="dropdown-item @(path.StartsWith("/Records/PatientHistory") ? "active" : "")" asp-action="PatientHistory" asp-controller="Records">Patient Records</a>
                        <a class="dropdown-item @(path.EndsWith("/Records/BlockedHistory") ? "active" : "")" asp-action="BlockedHistory" asp-controller="Records">Blocked History</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="offcanvas offcanvas-start w-50" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header bg-info text-white">
        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Welcome <strong>@CredentialValue.UserName()</strong></h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item h6"><a asp-controller="AdminDashboard" asp-action="Index" class="text-decoration-none text-dark">Dashboard</a></li>
            <li class="list-group-item h6"><a asp-controller="AdminProfile" asp-action="Index" class="text-decoration-none text-dark">My Profile</a></li>
            <li class="list-group-item h6"><a asp-controller="ProviderLocation" asp-action="Index" class="text-decoration-none text-dark">Provider Location</a></li>
            <li class="list-group-item h6"><a asp-controller="Providers" asp-action="Index" class="text-decoration-none text-dark">Providers</a></li>
            <li class="list-group-item h6"><a asp-controller="Partners" asp-action="Index" class="text-decoration-none text-dark">Partners</a></li>
            <li class="list-group-item h6"><a asp-controller="Access" asp-action="Index" class="text-decoration-none text-dark">Access</a></li>
            <li class="list-group-item h6"><a asp-controller="Records" asp-action="Index" class="text-decoration-none text-dark">Records</a></li>
        </ul>
    </div>
</div>