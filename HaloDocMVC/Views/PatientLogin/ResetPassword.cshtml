@model HaloDocMVC.Entity.Models.ViewDataCreatePatient;
@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Resest Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/patient/resetPasssword.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/darkLight.css">
    <title>Reset Password</title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
</head>
<body>
    <div class="main">
        <button class="darkBtn" onclick="darkLight()"><img src="../../Images/moon.svg" id="moonImg" alt="Dark Light Button"></button>
        <div class="innerMain">
            <div class="header">
                <img src="../../Images/Fig56._Patient_site_1.png" alt="HalloDoc Logo">
            </div>
            <div class="body">
                <h3><strong>Reset Your Password</strong></h3>
                <form class="form needs-validation" novalidate method="post" asp-action="SavePassword" asp-controller="PatientLogin">
                    <input type="hidden" name="email" value="@TempData["email"]" />
                    <div class="form-floating email">
                        <input asp-for="PassWord" type="password" class="form-control shadow-none mb-4 col-xl-3 col-lg-4 col-md-6 col-sm-6" id="pass" placeholder="Email" required>
                        <label for="pass">Password</label>
                        <span asp-validation-for="PassWord" class="text-danger"></span>
                    </div>
                    <div class="form-floating email">
                        <input asp-for="PasswordHash" type="password" class="form-control shadow-none mb-4 col-xl-3 col-lg-4 col-md-6 col-sm-6" id="confpass" placeholder="Email" required>
                        <label for="confpass">Confirm Password</label>
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <input type="submit" class="btn btn-primary mb-5 form-control col-xl-3 col-lg-4 col-md-6 col-sm-6 col-xs-12" value="Reset">
                </form>
            </div>
            <div class="footer">
                <a href="#"><small>Terms & Conditions</small></a> | <a href="#"><small>Privacy Policy</small></a>
            </div>
        </div>
    </div>
</body>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/darklight.js"></script>
</html>