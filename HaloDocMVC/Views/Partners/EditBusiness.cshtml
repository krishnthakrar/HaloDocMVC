@{
    Layout = "_Layout";
}
@model HaloDocMVC.Entity.Models.PartnersData
<div class="body">
    <div class="container">
        <div class="d-flex justify-content-between mt-4">
            <div class="d-flex align-items-center">
                <h4 class="pt-2">Add Business</h4>
            </div>
            <div class="backBtn">
                <a asp-controller="Partners" asp-action="Index"><button><span class="material-icons back"><span class="material-symbols-outlined">arrow_back_ios</span></span>Back</button></a>
            </div>
        </div>
        <form class="card border-0 shadow py-4 mb-5 mt-3 rounded p-3 rounded container" method="post" onsubmit="displayBusyIndicator()">
            <input type="hidden" asp-for="Id" />
            <h4 class="mb-4">Submit Information</h4>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="Business" type="text" class="form-control shadow-none" id="bName" placeholder="BusinessName" required>
                    <label for="bName" class="form-label">Business Name</label>
                    <span asp-validation-for="Business" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 mb-4">
                    <select asp-for="Profession" required class="form-select" data-allow-clear="true" tabindex="-1" id="Profession" asp-items="@(new SelectList(ViewBag.Profession,"HealthProfessionalId","ProfessionName"))" data-control="select2" data-placeholder="Select Level" style="line-height: 2.7;">
                        <option value="">All Professions</option>
                    </select>
                    <span asp-validation-for="Profession" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="FaxNumber" type="text" class="form-control shadow-none" id="fax" placeholder="Fax Number">
                    <label for="fax" class="form-label">Fax Number</label>
                    <span asp-validation-for="FaxNumber" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4 phone">
                    <input asp-for="PhoneNumber" class="form-control shadow-none" id="phone" required>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="Email" type="email" class="form-control shadow-none" id="email" placeholder="Email" required>
                    <label for="email" class="form-label">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="BusinessNumber" type="text" class="form-control shadow-none" id="bContact" placeholder="Business Contact" required>
                    <label for="bContact" class="form-label">Business Contact</label>
                    <span asp-validation-for="BusinessNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="Street" type="text" class="form-control shadow-none" id="street" placeholder="Street">
                    <label for="street" class="form-label">Street</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="City" type="text" class="form-control shadow-none" id="city" placeholder="City">
                    <label for="city" class="form-label">City</label>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <select class="form-select" asp-for="State" id="state" data-allow-clear="true" tabindex="-1" id="regiondropdown" asp-items="@(new SelectList(ViewBag.AllRegion,"RegionId","RegionName"))" data-control="select2" data-placeholder="Select Level">
                        <option value="">Select State</option>
                    </select>
                    <label for="state" class="form-label">State</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating mb-4">
                    <input asp-for="ZipCode" type="text" class="form-control shadow-none" id="zip" placeholder="ZipCode">
                    <label for="zip" class="form-label">ZipCode</label>
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3 px-3 d-flex justify-content-end">
                <button type="submit" class="col-1 btn btn-info text-white rounded mx-2 p-2">Save</button>
                <button type="reset" class="col-1 btn btn-outline-info text-info rounded mx-2 p-2">Cancel</button>
            </div>
        </form>
    </div>
</div>
<partial name="../Shared/_Loader.cshtml" />
<script src="~/js/phone.js"></script>