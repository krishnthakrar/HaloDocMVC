<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body>
    <div class="container-fluid wrapper">
        <div class="row min-vh-100">
            <div id="leftDiv" class="col">
                <img class="img-fluid h-100" src="../../Images/11116016_415-removebg.png" />
            </div>
            <div id="rightDiv" class="col d-flex flex-column justify-content-between">
                <div class="logo align-self-center mt-3">
                    <img class="img-fluid" src="~/images/Fig56._Patient_site_1.png">
                </div>
                @RenderBody()
                <div class="d-flex justify-content-center mb-3">
                    <a href="#" class="text-secondary text-decoration-none px-4 px-xs-2">Terms of condition</a>
                    <p class="text-secondary px-4 p-xs-2">|</p>
                    <a href="#" class="text-secondary text-decoration-none px-4 px-xs-2">Privacy Policy</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>