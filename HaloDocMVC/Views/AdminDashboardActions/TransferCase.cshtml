<div class="modal fade" id="transfercase" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header  bg-info text-white">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Transfer Physician </h1>
                <i class="fa-solid fa-xmark" data-bs-dismiss="modal"></i>
            </div>
            <form asp-action="TransferProvider" asp-controller="Home" class="mt-0 needs-validation" novalidate>
                <div class="modal-body">
                    <small class="modal-title">to assign  this request,select and search another physician.</small>
                    <input type="hidden" name="requestid" id="RequestID_Input_ModelTransferCase" />
                    <div class="col my-3">
                        <div class="form-floating">
                            <select class="form-select input-outline input-outline-select w-100" required aria-label="Phone" name="region" data-allow-clear="true" tabindex="-1" onchange="myFunction11()" id="region9" asp-items="@(new SelectList(ViewBag.AllRegion,"RegionId","RegionName"))" data-control="select2" data-placeholder="Select Level">
                                <option value="">All Region</option>
                            </select>
                            <label for="region2">Region</label>
                            <div class="invalid-feedback">
                                Please select valid region.
                            </div>
                        </div>
                    </div>
                    <div class="col mb-3">
                        <div class="form-floating">
                            <select class="form-select input-outline input-outline-select w-100" required name="ProviderId" data-allow-clear="true" tabindex="-1" id="provider11" data-control="select2" data-placeholder="Select Level">
                                <option value="">Select Physician</option>
                            </select>
                            <label for="provider11">Select Physician</label>
                            <div class="invalid-feedback">
                                Please select valid physician.
                            </div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea id="changenote" placeholder=" " name="Notes" class="input-outline w-100 fs-6 form-control shadow-none" type="text" style=" height:100px;" required></textarea>
                        <label class="inputs-lable inputs-lable-textarea fs-6" id="notedata">Notes</label>
                        <div class="invalid-feedback">
                            Please provide transfer notes.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class=" btn btn-info text-white" value="Assign">Assign</button>
                    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    function myFunction11() {
        var region = $('#region9').val();
        $.ajax({
            type: "POST",
            url: '@Url.Action("ProviderByRegion", "Home")?RegionId=' + region,
            cache: false,
            success: function (response) {
                
                
                var s = '<option value="-1">Please Select</option>';
                for (var i = 0; i < response.length; i++) {console.log(response);
                    s += '<option value="' + response[i].physicianId + '" class= "w-auto">' + response[i].firstName + ' ' + response[i].lastName + '</option>';
                }
                $('#provider11').html(s);
            },
            error: function () {
                alert("Error while checking email.");
            }
        });
    }
</script>