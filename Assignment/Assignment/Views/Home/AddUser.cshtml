@model Assignment.Entity.Models.AddUserModel;
<div class="modal fade" id="addUser" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-white">Add User</h5>
            </div>
            <form class="needs-validation" asp-action="AddUser" asp-controller="Home" method="post" novalidate>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating">
                            <input asp-for="FirstName" type="text" class="form-control shadow-none" id="firstName" placeholder="First Name" required>
                            <label for="firstName" class="form-label">First Name</label>
                            <div class="invalid-feedback">
                                Please enter First Name.
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating">
                            <input asp-for="LastName" type="text" class="form-control shadow-none" id="lastName" placeholder="Last Name" required>
                            <label for="lastName" class="form-label">Last Name</label>
                            <div class="invalid-feedback">
                                Please enter Last Name.
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating">
                            <input asp-for="Email" type="email" class="form-control shadow-none" id="email" placeholder="Email" required>
                            <label for="email" class="form-label">Email</label>
                            <div class="invalid-feedback">
                                Please enter Email.
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating">
                            <input asp-for="DOB" type="date" class="form-control shadow-none" id="dob" placeholder="Date Of Birth" required>
                            <label for="dob" class="form-label">Date Of Birth</label>
                            <div class="invalid-feedback">
                                Please Select a Date Of Birth.
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating">
                            <span class="font-weight-normal">Gender</span>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="1" name="GenderRadio" id="male" required>
                                <label class="form-check-label" for="male">
                                    Male
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="2" name="GenderRadio" id="female" required>
                                <label class="form-check-label" for="female">
                                    Female
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="3" name="GenderRadio" id="others" required>
                                <label class="form-check-label" for="others">
                                    Others
                                </label>
                            </div>
                            <div class="invalid-feedback">
                                Please select Gender.
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating">
                            <input asp-for="PhoneNo" type="text" class="form-control shadow-none" id="phoneNo" placeholder="Phone Number" required>
                            <label for="phoneNo" class="form-label">Phone Number</label>
                            <div class="invalid-feedback">
                                Please enter Phone Number.
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating">
                            <input asp-for="Country" type="text" class="form-control shadow-none" id="country" placeholder="Country" required>
                            <label for="country" class="form-label">Country</label>
                            <div class="invalid-feedback">
                                Please enter Country.
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating">
                            <select class="form-select pagesizeselect" asp-for="CityId" data-allow-clear="true" tabindex="-1" id="city" data-control="select" data-placeholder="City" asp-items="@(new SelectList(ViewBag.AllCity,"Id","Name"))" required>
                                <option value="">Select City</option>
                            </select>
                            <label for="city" class="form-label">City</label>
                            <div class="invalid-feedback">
                                Please select City.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>